{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["index.js", "App.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
